<% if notice %>
  <div id="notice" class="alert alert-success alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= notice %>
  </div>
<% end %>

<table class ="table table-bordered">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Preço</th>
      <th>Quantidade</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <!-- <% todos = Produto.order :nome %> -->
    <% @produtos_por_nome.each do |produto| %>
    <tr>
      <td><%= produto.nome %></td>
      <td><%= produto.descricao %></td>
      <td><%= produto.preco %></td>
      <td><%= produto.quantidade %></td>
      <td>
        <%= button_to "Remover", produto, method: :delete,  class: "btn btn-danger center-block",
              data: { confirm: "Tem certeza que deseja remover #{produto.nome}?"} %>
        <!-- <%= link_to "Remover Hum", produto, method: :delete %> -->
        <!-- <%= link_to "Remover Produto", "produtos//#{produto.id}/remove" %> -->
        <!-- <a href="/produtos/<%= produto.id %>/remove">Remover</a> -->
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

