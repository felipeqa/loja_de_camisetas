<%= form_for Produto.new do |f| %>

<div class="form-group">
  <%= f.label :nome %>
  <%= f.text_field :nome, class: "form-control" %>
  <br/>
</div>

<div class="form-group">
  <%= f.label :descricao , 'Descrição' %>
  <%= f.text_area :descricao, class: "form-control", rows: 4 %>
</div>

<div class="form-inline">
  <div class="form-group">
    <%= f.label :quantidade %>
    <%= f.number_field :quantidade, min: 0, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :preco, 'Preço' %>
    <%= f.number_field :preco, step: 0.01, min: 0, class: "form-control" %>
  </div>
  <%= f.submit 'Criar Produto', class: "btn btn-primary" %>
</div>
<br/>
<br/>

<% if @produto && @produto.errors.any? %>
<div id="error_explanation", class="alert alert-danger">
  <h2><%= pluralize(@produto.errors.count, "error") %> prohibited this product from being saved:</h2>

  <ul>
    <% @produto.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>

</div>
<% end %>
<% end %>
