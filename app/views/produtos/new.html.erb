<%= form_for Produto.new do |f| %>

<div class="form-group">
  <%= f.label :nome %>
  <%= f.text_field :nome, class: "form-control" %>
  <br/>
</div>

<div class="form-group">
  <%= f.label :descricao , 'Descrição' %>
  <%= f.text_area :descricao, class: "form-control", rows: 4 %>
</div>

<div class="form-inline">
  <div class="form-group">
    <%= f.label :quantidade %>
    <%= f.number_field :quantidade, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :preco, 'Preço' %>
    <%= f.number_field :preco, step: 0.01, class: "form-control" %>
  </div>
  <%= f.submit 'Criar Produto', class: "btn btn-primary" %>
</div>
<% end %>
